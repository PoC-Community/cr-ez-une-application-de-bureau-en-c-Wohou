<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="using:TodoListApp.Models"
        x:Class="TodoListApp.MainWindow"
        Title="To-Do List"
        Width="650" Height="700">

    <StackPanel Margin="20">
        <TextBlock Text="My To-Do List" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Add Task Section -->
        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Add New Task" FontWeight="Bold" Margin="0,0,0,5"/>

                <TextBox x:Name="TaskInput" Watermark="Enter task title..." Margin="0,0,0,5"/>

                <TextBox x:Name="TagsInput" Watermark="Tags (comma-separated, e.g., work, urgent)" Margin="0,0,0,5"/>

                <StackPanel Margin="0,0,0,5">
                    <TextBlock Text="Due Date (optional):" Margin="0,0,0,5"/>
                    <DatePicker x:Name="DueDatePicker" HorizontalAlignment="Stretch"/>
                </StackPanel>

                <Button x:Name="AddButton" Content="Add Task" HorizontalAlignment="Right" Width="100"/>
            </StackPanel>
        </Border>

        <!-- Filter Section -->
        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Filters" FontWeight="Bold" Margin="0,0,0,5"/>

                <WrapPanel>
                    <Button x:Name="FilterAllButton" Content="All" Margin="0,0,5,5" Width="60"/>
                    <Button x:Name="FilterTodayButton" Content="Today" Margin="0,0,5,5" Width="60"/>
                    <Button x:Name="FilterWeekButton" Content="This Week" Margin="0,0,5,5" Width="80"/>
                    <Button x:Name="FilterOverdueButton" Content="Overdue" Margin="0,0,5,5" Width="70"/>
                </WrapPanel>

                <TextBox x:Name="TagFilterInput" Watermark="Filter by tag..." Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Task List -->
        <TextBlock Text="Tasks (double-click to edit)" FontWeight="Bold" Margin="0,0,0,5"/>
        <ListBox x:Name="TaskList" Height="300" DoubleTapped="OnTaskDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="models:TaskItem">
                    <Border Padding="5" Margin="2" CornerRadius="3">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding IsOverdue, Converter={StaticResource OverdueBrushConverter}}" Opacity="0.3"/>
                        </Border.Background>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Title}" VerticalAlignment="Center" FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Tags Display -->
                            <StackPanel Orientation="Horizontal" Margin="25,5,0,0">
                                <TextBlock Text="ðŸ·ï¸ " FontSize="11"
                                          IsVisible="{Binding Tags, Converter={StaticResource StringNotEmptyConverter}}"/>
                                <TextBlock Text="{Binding Tags}" Foreground="Gray" FontSize="11"
                                          IsVisible="{Binding Tags, Converter={StaticResource StringNotEmptyConverter}}"/>
                            </StackPanel>

                            <!-- Due Date Display -->
                            <StackPanel Orientation="Horizontal" Margin="25,0,0,0">
                                <TextBlock Text="ðŸ“… " FontSize="11"
                                          IsVisible="{Binding DueDate, Converter={StaticResource NullableDateConverter}}"/>
                                <TextBlock Text="{Binding DueDateDisplay}" FontSize="11"
                                          Foreground="{Binding IsOverdue, Converter={StaticResource OverdueTextConverter}}"
                                          IsVisible="{Binding DueDate, Converter={StaticResource NullableDateConverter}}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
            <Button x:Name="DeleteButton" Content="Delete Selected" Width="120" Margin="0,0,5,0"/>
            <Button x:Name="CompleteAllButton" Content="Complete All" Width="120" Margin="0,0,5,0"/>
            <Button x:Name="ClearCompletedButton" Content="Clear Completed" Width="120" Margin="0,0,5,0"/>
        </StackPanel>

        <!-- Save Status -->
        <TextBlock x:Name="SaveStatusText" Text="All changes saved"
                   HorizontalAlignment="Center" Margin="0,10,0,0"
                   Foreground="Green" FontSize="12"/>
    </StackPanel>
</Window>
